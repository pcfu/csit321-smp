<% content_for :assets do %>
  <%= javascript_pack_tag 'stocks/index', 'data-turbolinks-track': 'reload' %>

  <!-- Include trading view chart here -->
  <script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
<% end %>


<!-- SECTION 1 -->
<div class="container-fluid px-0">
  <div class="row mx-0">
    <div class="col-12 px-0">
      <img src="/images/stockmarket.jpeg" class="img-fluid w-100" />
    </div>
  </div>
</div>

<!-- SECTION 2 -->
<div class="container my-5">
  <h1>SYNOPSIS PLACEHOLDER</h1>
</div>

<!-- SECTION 3 -->
<div class="container" style="margin-bottom: 20px">
  <div class="row">
    <div>
      <div id="tradingview-chart"></div>
    </div>
  </div>
</div>

<!-- SECTION 4 -->
<div class="container">
  <div class="row my-5">
    <div class="col-12">
      <h1>STOCKS LIST (PROTOTYPE)</h1>

      <table id="stocks-list" class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Symbol</th>
            <th scope="col">Name</th>
            <th scope="col">Exchange</th>
            <th scope="col">Type</th>
            <th scope="col">Description</th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>
