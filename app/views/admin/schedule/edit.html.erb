<div class="container" style="margin-bottom: 20px">
  <br/><br/><br/><br/>
  <h1>Edit Schedule</h1>
  <hr/>

  <% if flash[:error].present? %>
    <div class="alert alert-danger"><%= flash[:error] %></div>
  <% end %>
  <% if flash[:success].present? %>
    <div class="alert alert-success"><%= flash[:success] %></div>
  <% end %>

  <%= form_with model: @schedule, action: :update, url: admin_schedule_path(@schedule), local: true do |f| %>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :start_date, class: "form-label" %></label>
      <div class="col-sm-10">
        <%= f.date_field :start_date, required: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :Frequency, class: "form-label" %></label>
      <div class="col-sm-10">
        <%=
        f.select(:frequency,
                [['7',7],['14',14],['21',21]],
                { },
                { required: true, class: "form-control"})
        %>
      </div>
    </div>

    <%= link_to "Back", admin_schedule_index_path, class: 'btn btn-danger col-1' %>
    <%= f.submit :"Save", class: "btn btn-primary col-1" %>

    <% if local_assigns.has_key? :status_msg %>
      <p><%= status_msg %></p>
    <% end %>
  <% end %>

</div>