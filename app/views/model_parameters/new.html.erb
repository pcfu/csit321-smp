<div class="container" style="margin-bottom: 20px">
  <h1>Prediction/Recommendation</h1>
  <h2>Add New Model</h2>
  <hr/>

  <% if flash[:error].present? %>
    <div class="alert alert-danger"><%= flash[:error] %></div>
  <% end %>
  <% if flash[:success].present? %>
    <div class="alert alert-success"><%= flash[:success] %></div>
  <% end %>

  <%= form_with model: @ml_params, method: :post, url: model_parameters_create_path, local: true do |f| %>
    <div class = "mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :machine_model, class: "form-label" %>
      <%=
        f.select(:ml, ["LSTM", "ANN", "CNN"],
                 { include_blank: "Select a model" },
                 { class: "form-select" })
      %>
    </div>

    <div class="mb-3">
      <%= f.label :parameter_1, class: "form-label" %>
      <%= f.text_field :param_one, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :parameter_2, class: "form-label" %>
      <%= f.text_field :param_two, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :parameter_3, class: "form-label" %>
      <%= f.text_field :param_three, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :data_train_set, class: "form-label" %>
      <%=
        f.select(:train_set, @ml_params.class::DATA_SETS,
                 { include_blank: "Select a dataset" },
                 { class: "form-select" })
      %>
    </div>

    <div class="mb-3">
      <%= f.label :start_date, class: "form-label" %>
      <%= f.text_field :start_date, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :end_date, class: "form-label" %>
      <%= f.text_field :end_date, class: "form-control" %>
    </div>

    <%= link_to "Back", ml_models_path, class: 'btn btn-danger col-1' %>
    <%= f.submit :"Simulate", class: "btn btn-primary col-1" %>

    <% if local_assigns.has_key? :status_msg %>
      <p><%= status_msg %></p>
    <% end %>
  <% end %>
</div>
