<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Add Model</title>
  </head>

  <body>

  <%# insert header here %>
  <%= render "layouts/header" %>

  <div class="container" style="margin-bottom: 20px">
    <h1>Prediction/Recommendation</h1>
    <h2>Add New Model</h2>
    <hr/>

    <%= form_with url: addModel_path, local: true, method: :post do %>
      <div class = "mb-3">
        <%= label_tag(:Name, nil, class: "form-label") %>
        <%= text_field_tag(:name, nil, class: "form-control") %>
      </div>

      <div class="mb-3">
        <%= label_tag(:"Machine Model", nil, class: "form-label") %>
        <%= select_tag(:machinemodel, options_for_select(["LSTM", "ANN", "CNN"]), prompt: 'Select a model', class: "form-select") %>
      </div>

      <div class="mb-3">
        <%= label_tag(:"Parameter 1", nil, class: "form-label") %>
        <%= text_field_tag(:parameter1, nil, class: "form-control") %>
      </div>

      <div class="mb-3">
        <%= label_tag(:"Parameter 2", nil, class: "form-label") %>
        <%= text_field_tag(:parameter2, nil, class: "form-control") %>
      </div>

      <div class="mb-3">
        <%= label_tag(:"Parameter 3", nil, class: "form-label") %>
        <%= text_field_tag(:parameter3, nil, class: "form-control") %>
      </div>

      <div class="mb-3">
        <%= label_tag(:"Data train set", nil, class: "form-label") %>
        <%= select_tag(:datatrainset, options_for_select(DatasetView::DatasetList), prompt: 'Select a dataset', class: "form-select") %>
      </div>

      <div class="mb-3">
        <%= label_tag(:"Start date", nil, class: "form-label") %>
        <%= text_field_tag(:startdate, nil, class: "form-control") %>
      </div>

      <div class="mb-3">
        <%= label_tag(:"End date", nil, class: "form-label") %>
        <%= text_field_tag(:enddate, nil, class: "form-control") %>
      </div>

      <%= link_to "Back", "/model", class: 'btn btn-danger col-1' %>
      <%= submit_tag(:"Add", class: "btn btn-primary col-1") %>
      
      <% if local_assigns.has_key? :status_msg %>
        <p><%= status_msg %></p>
      <% end %>

    <% end %>

  </div>
  </body>
</html>